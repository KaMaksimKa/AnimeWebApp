@model List<DropdownsFilerAnimeViewModel>

<h3 class="text-center">Фильтр</h3>
<form asp-action="Filter" asp-controller="Anime" method="get">
	@foreach (var item in Model)
	{
		@await Html.PartialAsync("DropdownsFilterAnime",item)
	}
	<div class="row mt-3">
		<button type="submit" class="btn btn-primary">Отфильтровать</button>
	</div>
</form>

